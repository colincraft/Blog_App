<%= form_for @post do |f| %>
<p>
<%= f.label :title %>
<%= f.text_field :title %>
</p>
<p>
<%= f.label :category %>
<%= f.text_field :category %>
</p>
<p>
<%= f.label :body %>
<%= f.text_field :body %>
</p>
<%= f.submit %>
<% end %>

<p>
<%= link_to "Delete this Post??", post_path, method:"Delete", data:{ confirm: "Are you sure you want to delete #{@post.title}?"} %>
</p>
<!-- Home Button -->
<p>
<%= link_to "Home", authors_path %>
</p>
